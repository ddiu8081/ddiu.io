---
const tabs = [
  {
    name: 'Projects',
    link: '/projects',
  },
  {
    name: 'Posts',
    link: '/posts',
  },
  {
    name: 'Workspace',
    link: '/workspace',
  }
]
---

<div class="my-8">
  <div class="flex flex-col">
    {tabs.map((item, index) => (
      <a
        href={item.link}
        class:list={[
          'flex items-center justify-between py-3',
          'border-t border-base last:border-b',
          'hv-base',
        ]}
        style={{
          animationDelay: `${index * 0.2}s`,
        }}
      >
        <p>{item.name}</p>
        <div class="i-carbon-arrow-up-right" />
      </a>
    ))}
  </div>
</div>
